<div class="container align-center col-md-4 col-md-offset-5">
    <h1 class="text-center">Change Password</h1>
    <form action="/user/changePassword?_method=put" method="post">
        <div>
            <label class="form-label">Current password</label>
            <input type="password" name="oldPassword" class="form-control">
        </div>
        <div>
            <label class="form-label">New password</label>
            <input type="password" name="password" class="form-control">
        </div>
        <div>
            <label class="form-label">Repeat Password</label>
            <input type="password" name="confirmedPassword" class="form-control">
        </div>
        <button type="submit" class="btn btn-warning mt-2">change</button>
    </form>
    <div class="mt-3">
        <%- include("../partials/errorMessage") %> 
    </div>
</div>
