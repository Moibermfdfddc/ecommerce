<%- include('../partials/adminNavbar') %>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProduct">Add Product</button>
    <%- include("_modal_product") %>
        <div class="container">
            <div class="jumbotron shadow m-2 bg-white rounded">
                <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>#id</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Image</th>
                            <th>Stock</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% allProducts.forEach((product,index)=> { %>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= product.name %>
                                </td>
                                <td>
                                    <%= product.brand %>
                                </td>
                                <td>
                                    <%= product.category.categoryName %>
                                </td>
                                <td><img src="/files/<%=product.productImagePath %>" alt="" width="100" height="150">
                                </td>
                                <td>
                                    <%= product.quantity %>
                                </td>
                                <td>
                                    <%= product.description %>
                                </td>
                                <td>
                                    <form action="/admin/deleteProduct/<%= product.id%>?_method=DELETE" method="post">
                                        <button class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#edit-<%= product.id %>" type="button">Edit</button>
                                        <a class="btn btn-danger m-2" href="#deleteModal<%= product.id %>"
                                            data-bs-toggle="modal">Delete</a>

                                        <!-- delete modal start -->

                                        <div class="modal modal-alert" tabindex="-1" role="dialog"
                                            id="deleteModal<%= product.id %>">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content rounded-3 shadow">
                                                    <div class="modal-body p-4 text-center">
                                                        <h5 class="mb-2">Waring! Are you sure</h5>
                                                        <p class="mb-0">This change cant be undone.</p>
                                                    </div>
                                                    <div class="modal-footer flex-nowrap p-0">
                                                        <button type="submit"
                                                            class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
                                                        <button type="button"
                                                            class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0"
                                                            data-bs-dismiss="modal">No</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- delete modal end -->

                                    </form>
                                </td>
                            </tr>
                            <!-- modal body  -->
                            <div class="modal fade" id="edit-<%= product.id %>" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/editProduct/<%= product.id %>?_method=PUT"
                                                method="post" enctype="multipart/form-data">
                                                <div>
                                                    <label class="form-label">name*</label>
                                                    <input type="text" value="<%=product.name %>" name="name" required
                                                        class="form-control">
                                                </div>
                                                <div>
                                                    <label class="form-label">Brand*</label>
                                                    <input type="text" value="<%=product.brand %>" name="brand" required
                                                        class="form-control">
                                                </div>
                                                <div>
                                                    <label class="form-label">Category*</label>
                                                    <select name="category" class="form-select mt-2">
                                                        <% allCategories.forEach(category=>{ %>
                                                            <% if(product.category.id==category.id) { %>
                                                                <option selected value="<%=category.id %>"
                                                                    label="<%=category.categoryName %>"></option>
                                                                <% } else { %>
                                                                    <option value="<%=category.id %>"
                                                                        label="<%=category.categoryName %>"></option>
                                                                    <% } %>
                                                                        <% }) %>
                                                    </select>
                                                </div>
                                                <div>
                                                    <label class="form-label">stock*</label>
                                                    <input type="number" name="quantity" min="1"
                                                        value="<%=product.quantity %>" required class="form-control">
                                                </div>
                                                <div><label class="form-label">Description*</label></div>
                                                <div><textarea name="description" rows="5" class="form-control"
                                                        placeholder="Add description"
                                                        required><%=product.description %></textarea></div>
                                                <div><input type="file" name="productImage" class="form-control mt-3">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </tbody>
                </table>
                <hr>
                <%- include("../partials/errorMessage") %>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#admin').DataTable();
            });
        </script>