<%- include('../partials/adminNavbar') %>
<a href="products/addProduct" class="btn btn-primary">add Product</a>
    <div class="container">
        <div class="jumbotron shadow m-2 bg-white rounded">
            <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>#id</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th>Stock</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% allProducts.forEach((product,index)=>{ %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= product.name %></td>
                            <td><%= product.brand %></td>
                            <td><%= product.category.categoryName %></td>
                            <td><%= product.quantity %></td>
                            <td><%= product.description %></td>
                            <td>
                                <form action="/admin/deleteProduct/<%=product.id%>?_method=DELETE" method="post">
                                    <a href="products/editProduct/<%=product.id%>" class="btn btn-dark m-2">Edit</a>
                                    <button type="submit" class="btn btn-danger m-2">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <hr>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#admin').DataTable();
        });
    </script>