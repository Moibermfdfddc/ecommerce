<%- include('../partials/adminNavbar') %>

    <div class="container">
        <div class="jumbotron shadow m-2 bg-white rounded">
            <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>#id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Change status</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user,index)=>{ %>
                        <tr>
                            <td>
                                <%= index+1 %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <% if(user.isActive){ %>
                                <td class="table-success">Active</td>
                                <% } else { %>
                                    <td class="table-danger">Blocked</td>
                                    <% } %>
                                        <td class>
                                            <% if(user.isActive){ %>
                                                <form action="/admin/blockUser/<%= user.id %>?_method=PUT"
                                                    method="post">
                                                    <button type="button" data-bs-target="#modalBlock<%= user.id %>"
                                                        data-bs-toggle="modal" class="btn btn-success"><i
                                                            class="fa-solid fa-lock-open"></i></button>

                                                    <!-- block modal start -->

                                                    <div class="modal modal-alert" tabindex="-1" role="dialog"
                                                        id="modalBlock<%= user.id %>">
                                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                                            <div class="modal-content rounded-3 shadow">
                                                                <div class="modal-body p-4 text-center">
                                                                    <h5 class="mb-2">Waring! Are you sure</h5>
                                                                    <p class="mb-0">This user cant login if blocked.</p>
                                                                </div>
                                                                <div class="modal-footer flex-nowrap p-0">
                                                                    <button type="submit"
                                                                        class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
                                                                    <button type="button"
                                                                        class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0"
                                                                        data-bs-dismiss="modal">No</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- block modal end -->
                                                </form>
                                                <% } else { %>
                                                    <form action="/admin/unblockUser/<%= user.id %>?_method=PUT"
                                                        method="post">
                                                        <button type="submit" class="btn btn-danger"><i
                                                                class="fa-solid fa-lock"></i></button>
                                                    </form>
                                                    <% } %>

                                        </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <hr>
            <%- include("../partials/errorMessage") %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#admin').DataTable();
        });
    </script>