<script>
  let orderId
  $(document).ready(async function() {
    try {
      const settings = await axios({
        "url": "/user/payment/orderId",
        "method": "POST",
        "data": {
          "amount": '<%=findCart.total * 100%>'
        }
      });
      orderId = settings.data.orderId;
    } catch (err) {
      console.error(err)
    }
  });
  document.forms["checkoutForm"].addEventListener("submit", async (event) => {
    event.preventDefault();
    const data = new URLSearchParams(new FormData(event.target))
    try {
      const response = await axios(event.target.action, {
        url: event.target.action,
        method: "post",
        data: data,
      });
      console.log(response)
      if (response.status == 201) {
        await Swal.fire({
          title: 'Congrats!',
          text: 'Order Successful',
          icon: 'success',
          width: "25em",
          timer: 3000
        })
        window.location = "/user/myOrders"
      } else if (response.status == 202) {
        razorpay()
      }
    } catch (err) {
      console.error(err)
      await Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Something went wrong!',
        width: "25em",
        timer: 5000
      })
      // window.location = "/user/checkout"
    }
  });


  function razorpay() {
    let options = {
      "key": "rzp_test_qdnGosbHKRU60Y", // Enter the Key ID generated from the Dashboard
      "name": "Fashion",
      "amount": '<%=findCart.total * 100%>',
      "order_id": orderId, // For one time payment
      "theme": {
        "color": "#273952"
      },
      // This handler function will handle the success payment
      "handler": function(response) {
        // alert(response.razorpay_payment_id);
        Swal.fire({
          title: 'Congrats!',
          text: 'Payment Successful',
          icon: 'success',
          width: "25em",
          timer: 5000
        })
      },
    };
    const rzp1 = new Razorpay(options);
    rzp1.open();
    rzp1.on('payment.failed', function(response) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Payment Failed!',
        width: "25em"
      })
    });

  }
</script>